#-----------------------pygame------------------------------
VIEW_PIXELS = 600
VIEW_CELLS = 10
DRAW_CELLS = 11  
GRID_SIZE = 10
CELL_SIZE = VIEW_PIXELS // VIEW_CELLS
FRAME_JUEGO = (100, 80, 600, 400)
CAM_LERP = 0.29
VIEW_X = (600 - VIEW_PIXELS) // 2
VIEW_Y = (600 - VIEW_PIXELS) // 2

pygame.init()
screen= pygame.display.set_mode((1000,1000))
pygame.display.set_caption("picha")
reloj = pygame.time.Clock()
skin_jugador = ()

jugador = Jugador(
    FRAME_JUEGO,
    FRAME_JUEGO[0] + FRAME_JUEGO[2]//2 - 20,  # Centro X
    FRAME_JUEGO[1] + FRAME_JUEGO[3]//2 - 20,  # Centro Y
    skin_jugador
)


while True:
    screen.fill("white")

    pygame.draw.rect(screen, (20, 20, 30), FRAME_JUEGO)
    pygame.draw.rect(screen, (70, 70, 120), FRAME_JUEGO, 3)
    
    # Manejar eventos
    for e in pygame.event.get():
        if e.type== pygame.QUIT : 
            exit()