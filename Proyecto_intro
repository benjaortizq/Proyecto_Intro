import pygame
import random 
import threading
import os 
import sys
reloj=pygame.time.Clock()
class Jugador : 
    def __init__(self, canvas, pos_x, pos_y , velocidad):
        self.canvas = canvas
        self.x= pos_x
        self.y= pos_y
        self.velocidad= velocidad

        

pygame.init()
screen= pygame.display.set_mode((800,800))
pygame.display.set_caption("Proyecto Bomberman")

#------------sprites del juego ------




while True : 
    for event in pygame.event.get() :
        if event.type== pygame.QUIT : 
            exit()
    pygame.display.flip()
    reloj.tick(45)
