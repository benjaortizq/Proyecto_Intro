import pygame 
import random 
import sys 
import os 


class Jugador : 
    def __init__(self, frame, pos_x, pos_y,skin ):
        self.frame = frame
        self.x= pos_x
        self.y= pos_y
        self.velocidad = 5
        self.skin =skin
        self.ancho_personaje = skin.get_width()
        self.alto_personaje = skin.get_height()
    def mover(self):
        teclas = pygame.key.get_pressed()
        
        dx, dy = 0, 0
        if teclas[pygame.K_a] or teclas[pygame.K_LEFT]: dx = -self.velocidad
        if teclas[pygame.K_d] or teclas[pygame.K_RIGHT]: dx = self.velocidad
        if teclas[pygame.K_w] or teclas[pygame.K_UP]: dy = -self.velocidad
        if teclas[pygame.K_s] or teclas[pygame.K_DOWN]: dy = self.velocidad
        
        new_x = self.x + dx
        new_y = self.y + dy
        
        frame_x, frame_y, frame_w, frame_h = self.frame_rect
        new_x = max(frame_x, min(new_x, frame_x + frame_w - self.ancho_personaje))
        new_y = max(frame_y, min(new_y, frame_y + frame_h - self.alto_personaje))
        
        self.x = new_x
        self.y = new_y

    def dibujar(self, pantalla):
        pantalla.blit(self.skin, (self.x, self.y))




        

