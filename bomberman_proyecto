#-----------------------pygame------------------------------

#commons de pygame (literalmente el inicio de pygame)
pg.init()
screen= pg.display.set_mode((800, 600)) #tamano de pantalla
pg.display.set_caption("picha") #Nombre de la ventana
reloj = pg.time.Clock() #reloj comun para controlar FPS

#SPRITES
# JUGADOR  : 
#- se va a tener que crear un sprite para cada jugador, y cada uno va a tener su skin
placeholder_skin= pygame.import.image("placeholder.png") #placeholder para el skin del jugador

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()  
