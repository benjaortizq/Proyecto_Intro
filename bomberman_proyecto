    screen.blit (bombas_tex,(598,80))

    screen.blit(velocidad_img,(644,0))
    screen.blit (velo_text,(672,80))

    screen.blit(escudo_img,(718,0))
    screen.blit (escu_text,(746,80))

    screen.blit(texto_tiempo,(327,5))
