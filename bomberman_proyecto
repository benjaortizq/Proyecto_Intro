import pygame as pg
import random 
import sys 
import os 

#Aqui epiezan las clases del juego
# Clase Jugador
class Jugador : 
    def __init__(self, frame, pos_x, pos_y ): #clase padre de jugador  (atributos de frame, y psocicion de X, Y y frame)
        self.frame = frame
        self.x= pos_x
        self.y= pos_y




        

